<%= simple_form_for(@project) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :title, :required => true %>
      <%= f.input :number_of_participants, collection: [1, 2, 3, 4] %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
