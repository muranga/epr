<div class="one half padded">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, :required => true, :autofocus => true %>
        <%= f.input :full_name, :required => true %>
        <%= f.input :user_type, collection: %w(Student Public) %>
        <%= f.input :password, :required => true %>
        <%= f.input :password_confirmation, :required => true %>
        <div id="for_student" style="display: none;">
          <%= f.input :registration_number %>
          <%= f.input :academic_programme, collection: ["Bsc Electrical Engineering", "Bsc Computer Engineering", "Bsc Telecommunications Engineering"] %>
        </div>

      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

